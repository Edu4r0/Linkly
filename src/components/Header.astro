---


import { getSession } from "auth-astro/server";
import Login from "@/components/Login.jsx";
import User from "@/components/User.jsx"

const session = await getSession(Astro.request);
---

<header>
  <div class="flex justify-between items-center">
    <span id="logo" class="text-[36px] font-bold">Linkly</span>
    <slot/>
    <div class="flex gap-5">
      <div class="flex gap-5 w-auto text-[#C9CED6]">
        {
          session ? (
            <User session={session} client:load/>
          ) : (
              <Login client:load/>
          )
        }
      </div>

      
      <a class="hover:opacity-80" href="#">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          name="Twitter"
          fill="none"
          viewBox="0 0 1200 1227"
          ><path
            fill="#C9CED6"
            d="M714.163 519.284 1160.89 0h-105.86L667.137 450.887 357.328 0H0l468.492 681.821L0 1226.37h105.866l409.625-476.152 327.181 476.152H1200L714.137 519.284h.026ZM569.165 687.828l-47.468-67.894-377.686-540.24h162.604l304.797 435.991 47.468 67.894 396.2 566.721H892.476L569.165 687.854v-.026Z"
          ></path></svg
        >
      </a>
      
      <a class="hover:opacity-80" href="#">
        <svg
          width="28"
          height="28"
          stroke="currentColor"
          stroke-width="1.5"
          class="lucide-icon lucide lucide-GitHub"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
          style="color: #C9CED6;"
          ><path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
        >
      </a>
    </div>
  </div>
</header>

<style>
  #button-login {
    box-shadow: 0px 4px 10px 0px rgba(0, 0, 0, 0.1);
  }
  #button-register {
    box-shadow: 10px 9px 22px 0px rgba(20, 78, 227, 0.38);
  }
  #logo {
    background: radial-gradient(
      90% 97.1% at 5.56% 79.01%,
      #eb568e 0%,
      #144ee3 100%
    );
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
